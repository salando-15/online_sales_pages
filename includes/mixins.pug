mixin producto(name, pathImage, link, price, oldPrice)
  a(href=link).card.card--white
    picture
      img(src=pathImage, alt=name, load="lazy").card__image-container__img.card__image-container__img--product
    if link.startsWith("/")
      p.p.card__title.card__title--dark.card__title--margin=name
    else
      p.card__title.card__title--dark=name
    if price
      .card__precio
        p.card__precio__price $#{price}
        if oldPrice
          p.card__precio__oldPrice $#{oldPrice}
